    cout << "Gender: ";
    getline(cin, gender);
    cout << "Contact No: ";
    getline(cin, contactNo);
    cout << "Blood Group: ";
    getline(cin, bloodGroup);
    cout << "Address: ";
    getline(cin, address);
    cout << "Fee Status (Paid/Unpaid): ";
    getline(cin, feeStatus);
    cout << "Qualification: ";
    getline(cin, qualification);
    cout << "Marks: ";
